import axios from 'axios';

const api = axios.create({
  //A URL base agora aponta para a API
  baseURL: 'http://127.0.0.1:8000/api/',
});

// Adicionamos um "interceptor" que anexa o token de autenticação
// em todas as requisições para endpoints protegidos.
api.interceptors.request.use(
  (config) => {
    // Pega o token do localStorage
    const token = localStorage.getItem('accessToken');
    
    // Se o token existir, adiciona ao cabeçalho de autorização
    if (token) {
      // O cabeçalho é o 'passaporte' que prova que o usuário está logado.
      config.headers['Authorization'] = `Bearer ${token}`;
    }
    
    return config;
  },
  (error) => {
    return Promise.reject(error);
  }
);

export default api;